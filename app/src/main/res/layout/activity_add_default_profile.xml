<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:paddingLeft="@dimen/small_spacing"
              android:paddingRight="@dimen/small_spacing"
              android:paddingTop="@dimen/small_spacing"
              style="@style/defaultProfileLayoutStyle"
              tools:context="com.reddyetwo.hashmypass.app.AddDefaultProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:background="@drawable/tutorial_background"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/tutorial_content_image"
                android:src="@drawable/app_logo"
                android:layout_gravity="center"
                android:layout_width="@dimen/add_default_profile_logo_size"
                android:layout_height="@dimen/add_default_profile_logo_size"/>

            <TextView
                android:gravity="center"
                android:textSize="@dimen/add_default_profile_logo_text_size"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_default_profile_logo_size"/>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/small_spacing"
            android:paddingRight="@dimen/small_spacing"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/add_default_profile_vertical_margin"
                android:gravity="left"
                android:text="@string/tutorial_first_profile"
                android:textSize="@dimen/tutorial_content_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/private_key_text"
                android:maxLines="2"
                android:maxLength="48"
                android:hint="@string/private_key"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:scrollHorizontally="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="@dimen/add_default_profile_vertical_margin"
                android:gravity="left"
                android:text="@string/tutorial_first_profile_master_key"
                android:textSize="@dimen/tutorial_content_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_bar_height"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="?android:dividerHorizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="?android:dividerVertical"
            style="?android:buttonBarStyle">

            <Button
                android:id="@+id/ready_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:buttonBarButtonStyle"
                android:enabled="false"
                android:text="@string/ready"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
