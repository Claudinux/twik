<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tag_layout"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_action_tag"
            android:contentDescription="@string/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <AutoCompleteTextView
            android:id="@+id/main_tag"
            android:inputType="text"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="25"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:completionThreshold="2"/>

        <ImageButton
            android:id="@+id/main_tag_settings"
            android:src="@drawable/ic_action_gear"
            android:contentDescription="@string/tag_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            style="?android:borderlessButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/master_key_layout"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag_layout">

        <ImageView
            android:src="@drawable/ic_action_key"
            android:contentDescription="@string/master_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/main_master_key"
            android:inputType="textPassword"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="25"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/main_digest"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="38dp"
            android:layout_height="48dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hashed_password_layout"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/master_key_layout">

        <TextView
            android:gravity="left"
            android:id="@+id/main_hashed_password"
            android:text="hashed_password"
            android:textSize="20sp"
            android:layout_width="275dp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/main_clipboard"
            android:src="@drawable/ic_action_copy"
            android:contentDescription="@string/copy_to_clipboard"
            android:layout_toRightOf="@id/main_hashed_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/button_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        style="?android:buttonBarStyle"
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/main_hash"
            android:text="@string/hash"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:buttonBarButtonStyle"/>

    </LinearLayout>


</RelativeLayout>
