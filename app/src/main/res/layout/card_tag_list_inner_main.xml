<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        style="@style/card"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/card_header_simple_title_margin_left"
        android:paddingRight="@dimen/card_header_simple_title_margin_right"
        android:paddingBottom="0dp"
        android:background="@drawable/tag_list_item_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tag_favicon"
            android:src="@drawable/ic_amazon"
            android:layout_width="32dp"
            android:layout_marginRight="8dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-light"
            android:text="@string/tag"
            android:gravity="left"
            android:textSize="@dimen/card_inner_text_size"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
