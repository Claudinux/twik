<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tutorial_content_height">

        <TextView
            android:id="@+id/tutorial_header_text"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/tutorial_header_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tutorial_content_header_height"/>

        <TextView
            android:id="@+id/tutorial_content_text"
            android:gravity="center"
            android:textSize="@dimen/tutorial_content_text_size"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tutorial_content_content_height"/>
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/tutorial_animation_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>