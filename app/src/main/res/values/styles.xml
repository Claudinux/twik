<resources>

    <style name="Theme.Hashmypass" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Needed for emulator bug - Holo light color is white instead of gray -->
        <item name="android:windowBackground">@color/holo_light_background</item>
        <item name="android:actionBarItemBackground">
            @drawable/selectable_background_hashmypass
        </item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Hashmypass</item>
        <item name="android:dropDownListViewStyle">
            @style/DropDownListView.Hashmypass
        </item>
        <item name="android:actionBarTabStyle">
            @style/ActionBarTabStyle.Hashmypass
        </item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Hashmypass
        </item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Hashmypass
        </item>
        <item name="android:actionModeBackground">
            @drawable/cab_background_top_hashmypass
        </item>
        <item name="android:actionModeSplitBackground">
            @drawable/cab_background_bottom_hashmypass
        </item>
        <item name="android:actionModeCloseButtonStyle">
            @style/ActionButton.CloseMode.Hashmypass
        </item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">
            @style/Theme.Hashmypass.Widget
        </item>

    </style>

    <style name="ActionBar.Solid.Hashmypass" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_hashmypass</item>
        <item name="android:backgroundStacked">
            @drawable/ab_stacked_solid_hashmypass
        </item>
        <item name="android:backgroundSplit">
            @drawable/ab_bottom_solid_hashmypass
        </item>
        <item name="android:progressBarStyle">@style/ProgressBar.Hashmypass
        </item>
    </style>

    <style name="ActionBar.Transparent.Hashmypass" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_hashmypass
        </item>
        <item name="android:progressBarStyle">@style/ProgressBar.Hashmypass
        </item>
    </style>

    <style name="PopupMenu.Hashmypass" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">
            @drawable/menu_dropdown_panel_hashmypass
        </item>
    </style>

    <style name="DropDownListView.Hashmypass" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">
            @drawable/selectable_background_hashmypass
        </item>
    </style>

    <style name="ActionBarTabStyle.Hashmypass" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_hashmypass
        </item>
    </style>

    <style name="DropDownNav.Hashmypass" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">
            @drawable/spinner_background_ab_hashmypass
        </item>
        <item name="android:popupBackground">
            @drawable/menu_dropdown_panel_hashmypass
        </item>
        <item name="android:dropDownSelector">
            @drawable/selectable_background_hashmypass
        </item>
    </style>

    <style name="ProgressBar.Hashmypass" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">
            @drawable/progress_horizontal_hashmypass
        </item>
    </style>

    <style name="ActionButton.CloseMode.Hashmypass" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_hashmypass</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Hashmypass.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Hashmypass</item>
        <item name="android:dropDownListViewStyle">
            @style/DropDownListView.Hashmypass
        </item>
    </style>

    <!-- End of ActionBar style -->

    <style name="DropDownItem"
           parent="android:Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">
            ?android:attr/textAppearanceInverse
        </item>
    </style>

    <style name="hashButtonStyle" parent="@android:style/ButtonBar">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style
        name="tutorialStyle"
        parent="android:style/Theme.Holo.Light.NoActionBar" />

    <style name="tutorialLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="defaultProfileLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Cards -->

    <style name="Tag.card.content_outer_layout" parent="@style/card.content_outer_layout">
        <!--Style for Content View-->
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/card_content_outer_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_content_outer_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_content_outer_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_content_outer_view_margin_right</item>
    </style>
</resources>